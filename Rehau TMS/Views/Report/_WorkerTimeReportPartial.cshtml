@model Rehau_TMS.ViewModels.ReportsViewModel
@{
    ViewBag.Title = "Raport czasu pracy pracowników";
}
@if (!Model.Schedules.Any())
{
    <p><b>@ViewBag.Title</b></p>
    <p>Brak danych dla wskazanego zakresu</p>
}
else
{
    <p><b>@ViewBag.Title</b></p>
    <table class="table table-bordered table-hover">

        <thead>
            <tr>
                <td><b>Pracownik</b></td>
                <td><b>Rodzaj pracy</b></td>
                <td><b>Numer WA</b></td>
                <td><b>(h)</b></td>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model.Schedules.GroupBy(s => new { s.ApplicationUser, s.WorkType, s.Tool, s.ToolId }))
            {
                <tr>
                    <td>@item.Key.ApplicationUser.FullName</td>
                    <td>@item.Key.WorkType.Name</td>

                    <td>
                        @if (item.Key.ToolId != null)
                        {
                            @item.Key.Tool.SerialNumber
                        }
                    </td>

                    <td>@item.Sum(s => s.ReportedHours)</td>
                </tr>
            }
        </tbody>

    </table>
}